class Solution {
    public int[] sumZero(int n) {
        int[] arr=new int[n];
        for(int i=0;i<n;i++){
            if(n%2!=0){
                arr[i]=-n/2+i;
            }
            else{
                if(-n/2+i!=0){
                arr[i]=-n/2+i;
            }
                else{
                    arr[i]=n/2;
                }
        }
        }
        return arr;
    }
}
